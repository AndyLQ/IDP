@model registering_try2.Models.User

@{
    ViewData["Title"] = "Delete";
}

<h1 style="
    font-size:40px;
    text-align:center;
    margin-bottom: 30px;
    font-family:Roboto;""

    >Delete</h1>

<h3 style="
    font-size:30px;
    text-align:center;
    margin-bottom: 30px;
    font-family:Roboto;""

    >Are you sure you want to delete this?</h3>
<div  style="
    padding:20px;
    display:block;
    margin:auto;
    width:40vw;
    font-weight:400;
    text-decoration:none;
    font-family:Roboto;
    margin-bottom:20px;
   font-size:22px;">
 
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Role)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="UserId"  />
        <input type="submit" value="Delete" class="btn btn-danger" style="
    padding:15px;
    width:200px;
    text-align:center;
    background:linear-gradient(130deg, rgba(0,43,101,1) 0%, rgba(0,104,208,1) 100%);
    color:white;
    font-weight:400;
    text-decoration:none;
    font-family:Roboto;
    margin-bottom:20px;
    margin-right:30px;
   font-size:22px;
   border:none;"
               />


        <a asp-action="Index" style="
    padding:15px;
    width:200px;
    text-align:center;
    background:linear-gradient(130deg, rgba(0,43,101,1) 0%, rgba(0,104,208,1) 100%);
    color:white;
    font-weight:400;
    text-decoration:none;
    font-family:Roboto;
    margin-bottom:20px;
    margin-right:30px;
   font-size:22px;">Back to List</a>
    </form>
</div>

<style>
    dd {
        margin-left: 0px;
        margin-bottom: 15px;
    }

    dt {
        font-weight: 800;
    }
</style>